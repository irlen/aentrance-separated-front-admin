.drcontainer{
  width: auto;
  position: fixed;
  z-index: 10000;
  height: auto;
  background:#2a4280;
  box-shadow: 0 2px 8px rgba(0,0,0,.6);
  border-radius: 4px;
  color: #ffffff;
}
.drcontainer ul{
  padding: 4px 0;
  width: auto;
  border-radius: 5px;
}
.drcontainer>ul>li{
  padding: 5px 12px;
  margin: 0;
  clear: both;
  font-size: 14px;
  font-weight: 400;
  white-space: nowrap;
  cursor: pointer;
  -webkit-transition: all .3s;
  transition: all .3s;
  line-height: 22px;
}

.drcontainer>ul>li:hover{
  background: @selectColor;
  color: #01D39F;
}
